<?xml version="1.0" encoding="utf-8"?><android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="wrap_content">    <ImageView        android:id="@+id/imgVocal"        android:layout_width="@dimen/dp_80"        android:layout_height="@dimen/dp_80"        android:contentDescription="@string/img"        android:src="@drawable/vocal"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toStartOf="@id/imgReplay"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent"        app:layout_constraintHorizontal_chainStyle="spread_inside"/>    <ImageView        android:id="@+id/imgReplay"        android:layout_width="@dimen/dp_80"        android:layout_height="@dimen/dp_80"        android:contentDescription="@string/img"        android:src="@drawable/replay"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toStartOf="@id/imgPlay"        app:layout_constraintStart_toEndOf="@id/imgVocal"        app:layout_constraintTop_toTopOf="parent" />    <ImageView        android:id="@+id/imgPlay"        android:layout_width="@dimen/dp_80"        android:layout_height="@dimen/dp_80"        android:contentDescription="@string/img"        android:src="@drawable/replay"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toStartOf="@id/imgNext"        app:layout_constraintStart_toEndOf="@id/imgReplay"        app:layout_constraintTop_toTopOf="parent" />    <ImageView        android:id="@+id/imgNext"        android:layout_width="@dimen/dp_80"        android:layout_height="@dimen/dp_80"        android:contentDescription="@string/img"        android:src="@drawable/next"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toStartOf="@id/imgReduce"        app:layout_constraintStart_toEndOf="@id/imgPlay"        app:layout_constraintTop_toTopOf="parent" />    <ImageView        android:id="@+id/imgReduce"        android:layout_width="@dimen/dp_80"        android:layout_height="@dimen/dp_80"        android:contentDescription="@string/img"        android:src="@drawable/reduce"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toStartOf="@id/imgAdd"        app:layout_constraintStart_toEndOf="@id/imgNext"        app:layout_constraintTop_toTopOf="parent" />    <ImageView        android:id="@+id/imgAdd"        android:layout_width="@dimen/dp_80"        android:layout_height="@dimen/dp_80"        android:contentDescription="@string/img"        android:src="@drawable/add"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toEndOf="@id/imgReduce"        app:layout_constraintTop_toTopOf="parent" />    <TextView        android:id="@+id/tvVocal"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="@string/button_vocal"        android:textSize="@dimen/sp_18"        app:layout_constraintBottom_toBottomOf="@id/imgVocal"        app:layout_constraintEnd_toEndOf="@id/imgVocal"        app:layout_constraintStart_toStartOf="@id/imgVocal"        app:layout_constraintTop_toTopOf="@id/imgVocal"        app:layout_constraintVertical_bias="1"        android:layout_marginTop="@dimen/dp_18"/>    <TextView        android:id="@+id/tvReplay"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="@string/button_replay"        android:textSize="@dimen/sp_18"        app:layout_constraintBottom_toBottomOf="@id/imgReplay"        app:layout_constraintEnd_toEndOf="@id/imgReplay"        app:layout_constraintStart_toStartOf="@id/imgReplay" />    <TextView        android:id="@+id/tvPlay"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="@string/button_play"        android:textSize="@dimen/sp_18"        app:layout_constraintBottom_toBottomOf="@id/imgPlay"        app:layout_constraintEnd_toEndOf="@id/imgPlay"        app:layout_constraintStart_toStartOf="@id/imgPlay" />    <TextView        android:id="@+id/tvNext"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="@string/button_next"        android:textSize="@dimen/sp_18"        app:layout_constraintBottom_toBottomOf="@id/imgNext"        app:layout_constraintEnd_toEndOf="@id/imgNext"        app:layout_constraintStart_toStartOf="@id/imgNext" />    <TextView        android:id="@+id/tvReduce"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="@string/button_reduce"        android:textSize="@dimen/sp_18"        app:layout_constraintBottom_toBottomOf="@id/imgReduce"        app:layout_constraintEnd_toEndOf="@id/imgReduce"        app:layout_constraintStart_toStartOf="@id/imgReduce" />    <TextView        android:id="@+id/tvAdd"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="@string/button_add"        android:textSize="@dimen/sp_18"        app:layout_constraintBottom_toBottomOf="@id/imgAdd"        app:layout_constraintEnd_toEndOf="@id/imgAdd"        app:layout_constraintStart_toStartOf="@id/imgAdd" /></android.support.constraint.ConstraintLayout>