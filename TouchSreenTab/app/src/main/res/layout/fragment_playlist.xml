<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <LinearLayout
        android:id="@+id/box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/dp_8"
        app:layout_constraintBottom_toTopOf="@id/rcvPlaylist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_13"
            android:drawableStart="@mipmap/empty"
            android:drawablePadding="@dimen/dp_12"
            android:text="Empty"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_13"
            android:background="@color/grey"
            android:contentDescription="@string/img" />

        <TextView
            android:id="@+id/tvRandom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_13"
            android:drawableStart="@mipmap/random"
            android:drawablePadding="@dimen/dp_12"
            android:text="Random"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcvPlaylist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/box"
        app:layout_constraintStart_toStartOf="@id/box"
        app:layout_constraintTop_toBottomOf="@id/box" />

</android.support.constraint.ConstraintLayout>