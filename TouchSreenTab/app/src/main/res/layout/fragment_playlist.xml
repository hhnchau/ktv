<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <LinearLayout
        android:id="@+id/box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/rcvPlaylist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_13"
            android:drawableStart="@mipmap/empty"
            android:drawableLeft="@mipmap/empty"
            android:drawablePadding="@dimen/dp_4"
            android:text="Empty"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_13"
            android:contentDescription="@string/img"
            android:src="@drawable/divider" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_13"
            android:drawableStart="@mipmap/random"
            android:drawableLeft="@mipmap/random"
            android:drawablePadding="@dimen/dp_4"
            android:text="Random"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcvPlaylist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_13"
        android:layout_marginEnd="@dimen/dp_13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/box"
        app:layout_constraintStart_toStartOf="@id/box"
        app:layout_constraintTop_toBottomOf="@id/box" />

</android.support.constraint.ConstraintLayout>