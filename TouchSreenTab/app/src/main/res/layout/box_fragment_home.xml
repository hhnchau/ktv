<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/banner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/recommend"
        android:background="#E91E63"/>

    <View
        android:id="@+id/recommend"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/songs"
        app:layout_constraintStart_toEndOf="@id/banner"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#30BB53"/>

    <View
        android:id="@+id/songs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/playlist"
        app:layout_constraintStart_toEndOf="@id/recommend"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#1E28E9"/>

    <View
        android:id="@+id/artists"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/playlist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/songs"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#E9C71E"/>

    <View
        android:id="@+id/playlist"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/setting"
        app:layout_constraintStart_toEndOf="@id/songs"
        app:layout_constraintTop_toBottomOf="@id/artists"
        android:background="#A714E6"/>

    <View
        android:id="@+id/setting"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/playlist"
        app:layout_constraintTop_toBottomOf="@id/artists"
        android:background="#00BCD4"/>


</android.support.constraint.ConstraintLayout>