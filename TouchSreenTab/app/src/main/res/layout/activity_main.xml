<?xml version="1.0" encoding="utf-8"?><android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    xmlns:app="http://schemas.android.com/apk/res-auto">    <FrameLayout        android:id="@+id/framePage"        android:layout_width="0dp"        android:layout_height="0dp"        app:layout_constraintTop_toTopOf="parent"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintEnd_toStartOf="@id/framePlayer"        app:layout_constraintHorizontal_weight="6"/>    <FrameLayout        android:id="@+id/framePlayer"        android:layout_width="0dp"        android:layout_height="0dp"        app:layout_constraintTop_toTopOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toEndOf="@id/framePage"        app:layout_constraintBottom_toTopOf="@id/frameControl"        app:layout_constraintVertical_weight="4"        app:layout_constraintHorizontal_weight="4"/>    <FrameLayout        android:id="@+id/frameControl"        android:layout_width="0dp"        android:layout_height="0dp"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintTop_toBottomOf="@id/framePlayer"        app:layout_constraintStart_toEndOf="@id/framePage"        app:layout_constraintVertical_weight="6" /></android.support.constraint.ConstraintLayout>