<?xml version="1.0" encoding="utf-8"?><android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    xmlns:app="http://schemas.android.com/apk/res-auto">    <TextView        android:id="@+id/single"        android:layout_width="300dp"        android:layout_height="300dp"        android:text="SINGLE MODE"        android:textColor="@color/white"        android:textStyle="bold"        android:textSize="@dimen/sp_40"        android:background="@color/green"        android:gravity="center"        app:layout_constraintTop_toTopOf="parent"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintEnd_toStartOf="@id/dual"        android:onClick="single"/>    <TextView        android:id="@+id/dual"        android:layout_width="300dp"        android:layout_height="300dp"        android:text="DUAL MODE"        android:textColor="@color/white"        android:textStyle="bold"        android:textSize="@dimen/sp_40"        android:background="@color/green"        android:gravity="center"        app:layout_constraintTop_toTopOf="parent"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintStart_toEndOf="@id/single"        app:layout_constraintEnd_toEndOf="parent"        android:onClick="dual"/></android.support.constraint.ConstraintLayout>